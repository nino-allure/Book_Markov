<UserControl x:Class="Book_Markov.Elements.Element"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Book_Markov.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="100" Background="#FF6AADED" Margin="0,0,0,10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="tbName" Text="Наименование: Па па па" Margin="10,10,9.8,0" VerticalAlignment="Top" 
                   Foreground="White" FontWeight="Bold" Grid.ColumnSpan="3"/>
        <TextBlock x:Name="tbGenre" Text="Жанр: Пи пи пи" 
                   Margin="10,36,9.8,10" Foreground="White" TextWrapping="Wrap"/>
        <TextBlock x:Name="tbAuthor" Text="Автор: Пу пу пу" Margin="9,63,10,0" Foreground="White" TextWrapping="Wrap" Grid.ColumnSpan="1"/>
    </Grid>
</UserControl>
